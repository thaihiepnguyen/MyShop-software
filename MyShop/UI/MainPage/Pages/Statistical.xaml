<Page x:Class="MyShop.UI.MainPage.Pages.Statistical"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyShop.UI.MainPage.Pages"
      Loaded="Page_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Statistical">

    <Grid Background="White">
        <Canvas>
            <TextBlock Text="Doanh thu trong ngày" Canvas.Left="65" Canvas.Top="125"/>
            <TextBlock Text="Doanh thu tháng gần nhất" Canvas.Left="330" Canvas.Top="128" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Text="Doanh thu năm gần nhất" Canvas.Left="582" Canvas.Top="133"/>
            <TextBlock Text="{Binding day}" Canvas.Left="65" Canvas.Top="159" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Red"/>
            <TextBlock Text="{Binding month}" Canvas.Left="330" Canvas.Top="162" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Red"/>
            <TextBlock Text="{Binding year}" Canvas.Left="582" Canvas.Top="162" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Red"/>
        </Canvas>

    </Grid>
</Page>
