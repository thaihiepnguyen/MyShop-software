<Page x:Class="MyShop.UI.MainPage.Pages.ProductDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyShop.UI.MainPage.Pages"
      xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetail">

    <Page.Resources>
        <local:RelativeToAbsoluteConverter x:Key="absoluteConverter"/>
        <local:DecimalToCurrencyConverter x:Key="currencyConverter"/>
        <local:PromotionPercentConverter x:Key="promotionConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Hiển thị nút bấm trở về-->
        <Button
            Name="BackButton"
            Width="85"
            Height="30"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5"
            BorderBrush="Orange"
            HorizontalAlignment="Left"
            Margin="20,10,0,0"
            Click="BackButton_Click"
            >
            <StackPanel
                Orientation="Horizontal">
                <fa:ImageAwesome 
                    Name="CatIcon"
                    Width="11"
                    Height="11"
                    Margin="0, 0, 8, 0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Icon="Backward"
                    Foreground="#8B4000"
                        />
                <TextBlock
                    FontWeight="Bold"
                    Foreground="#8B4000"
                    >Trở về</TextBlock>
            </StackPanel>
        </Button>
        <!--binding-->
        <!--Hiển thị ảnh sản phẩm-->
        <Image Grid.Row="1" 
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="{Binding Product.ImagePath, Converter={StaticResource absoluteConverter}}"
               Margin="10,0,0,30">
            <Image.Effect>
                <DropShadowEffect BlurRadius="35"
                                  ShadowDepth="10"
                                  Opacity="0.3"
                                  Direction="-90"
                                  Color="#8B4000"/>
            </Image.Effect>
        </Image>

        <Border Grid.Row="1"
              Grid.Column="1"
              Background="#60ffffff"
              Margin="0,0,20,0"
                CornerRadius="15"
              >
            <Grid
              Margin="30, 15,30,15"
              >
                <Grid.RowDefinitions>
                    <!--Hiển thị tên sản phẩm-->
                    <RowDefinition Height="50"/>
                    <!--Hiển thị thông tin chi tiết sản phẩm-->
                    <RowDefinition/>
                    <!--Hiển thị mô tả sản phẩm-->
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>


                <TextBlock
                Text="{Binding Product.ProName}"
                Margin="0,0,0,10"
                Foreground="#353935"
                d:Text="Samsung Galaxy S20 Ultra"
                VerticalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                FontFamily="Segoe UI"
                >
                </TextBlock>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <!--Hiển thị loại sản phẩm-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="{Binding Category.CatIcon}"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Loại Sản Phẩm"
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock Text="{Binding Category.CatName}"
                                   FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0"/>
                        </StackPanel>
                        <!--Hiển thi giá bán-->
                        <StackPanel Orientation="Vertical"
                                    Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Money"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Giá bán"
                             
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel >

                            <StackPanel Orientation="Horizontal" Name="PriceSP">
                                <TextBlock Text="{Binding Product.PromotionPrice, Converter={StaticResource currencyConverter}}"
                                   Foreground="DarkRed"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Margin="22,0,0,0">
                                </TextBlock>
                                <Border
                                    Name="PromotionBorder"
                                    Background="#60ffffff"
                                    CornerRadius="5"
                                    Margin="10, 0,0,0"
                                    Height="20"
                                    Width="40"
                                  >
                                    <TextBlock
                                        Name ="PromotionTextBlock"
                                        Foreground="DarkRed"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding Promotion.DiscountPercent, Converter={StaticResource promotionConverter}}">
                                    </TextBlock>
                                </Border>
                                
                            </StackPanel>
                        </StackPanel>

                        <!--Hiển thi Số lượng hiện tại-->
                        <StackPanel Orientation="Vertical"
                                    Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Signal"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="SL Tồn Kho"
                             
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock 
                                   FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0">
                            <Run Text="{Binding Product.Quantity}"/>
                            <Run Text="Sản Phẩm"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <!--Hiển thị loại dung lương Ram-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Gears"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Ram"
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock
                                   FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0">
                            <Run Text="{Binding Product.Ram}"/>
                            <Run Text="GB"/>
                            </TextBlock>
                        </StackPanel>
                        <!--Hiển thi dung lượng Rom-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Gear"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Rom"
                             
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock
                                    FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0">
                            <Run Text="{Binding Product.Rom}"/>
                            <Run Text="GB"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Hiển thi dung lượng Pin-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Battery2"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Dung lượng Pin"
                             
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock 
                                   FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0">
                            <Run Text="{Binding Product.BatteryCapacity}"></Run>
                            <Run Text="mAh"></Run>
                            </TextBlock>
                        </StackPanel>

                        <!--Hiển thi Screen Size-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Desktop"
                            Foreground="#8B4000"
                        />

                                <!-- binding -->
                                <TextBlock
                             Text="Kích Thước Màn Hình"
                             
                             Foreground="#8B4000"
                            FontSize="12"
                            FontWeight="Medium"
                            />
                            </StackPanel>
                            <TextBlock 
                                   FontSize="14"
                                   Foreground="#353935"
                                   Margin="22, 0,0,0">
                            <Run Text="{Binding Product.ScreenSize}"></Run>
                            <Run Text="inch"></Run>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="353*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="MÔ TẢ"
                               Foreground="#353935"
                               FontSize="16"
                               FontWeight="Bold" Grid.ColumnSpan="2"></TextBlock>
                    <TextBlock Grid.Row="1" Text="{Binding Product.TinyDes}"
                               TextWrapping="Wrap" Grid.ColumnSpan="2"/>
                </Grid>

                <StackPanel Orientation="Vertical" Grid.Row="3">
                    <TextBlock Text="ÁP DỤNG KHUYẾN MÃI"
                    Foreground="#353935"
                    FontSize="16"
                    FontWeight="Bold" Grid.ColumnSpan="2"></TextBlock>
                    <Border
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    
                    Height="30"
                    Width="170"
                    Margin="0,0,20,10"
                    BorderThickness="0.5" BorderBrush="Orange" CornerRadius="14"
                     Background="WhiteSmoke" 
                >
                        <ComboBox 
                    Name="PromotionsCombobox"
                    BorderThickness="0" BorderBrush="Transparent" Width="140"
                    VerticalContentAlignment="Center"
                    SelectionChanged="PromotionsCombobox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PromoCode}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">

                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Border>
                </StackPanel>

            </Grid>
        </Border>

        <!--Hiển thị nút bấm thêm vào giỏ hàng-->
        <Button
            Name="AddOrder"
            Grid.Row="2"
            Width="155"
            Height="30"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5"
            BorderBrush="Orange"
            HorizontalAlignment="Right"
            Margin="0,0,-50,0"
            Click="AddOrder_Click"
            >
            <StackPanel
                Orientation="Horizontal">
                <fa:ImageAwesome 
                    Width="11"
                    Height="11"
                    Margin="0, 0, 8, 0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Icon="PlusCircle"
                    Foreground="#8B4000"
                        />
                <TextBlock
                    FontWeight="Medium"
                    Foreground="#8B4000"
                    >Thêm vào giỏ hàng</TextBlock>
            </StackPanel>
        </Button>

        <!--Hiển thị nút bấm cập nhật-->
        <Button
            Name="UpdateButton"
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="30"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5"
            BorderBrush="Orange"
            HorizontalAlignment="Left"
            Margin="80,0,0,0"
            Click="UpdateButton_Click"
            >
            <StackPanel
                Orientation="Horizontal">
                <fa:ImageAwesome 
                    Width="11"
                    Height="11"
                    Margin="0, 0, 8, 0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Icon="Refresh"
                    Foreground="#8B4000"
                        />
                <TextBlock
                    FontWeight="Medium"
                    Foreground="#8B4000"
                    >Cập nhật</TextBlock>
            </StackPanel>
        </Button>

        <!--Hiển thị nút bấm xóa -->
        <Button
            Name="DelProduct"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            Height="30"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5"
            BorderBrush="Red"
            HorizontalAlignment="Right"
            Margin="0,0,20,0"
            Click="DelProduct_Click"
            >
            <StackPanel
                Orientation="Horizontal">
                <fa:ImageAwesome 
                    Width="11"
                    Height="11"
                    Margin="0, 0, 8, 0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Icon="Remove"
                    Foreground="DarkRed"
                        />
                <TextBlock
                    FontWeight="Medium"
                    Foreground="DarkRed"
                    >Xóa sản phẩm</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
